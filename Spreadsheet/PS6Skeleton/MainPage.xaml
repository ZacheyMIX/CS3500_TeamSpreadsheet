<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:SS="clr-namespace:SS"
             x:Class="SpreadsheetGUI.MainPage">
    <!--Comment-->

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="New" Clicked="NewClicked"/>
            <MenuFlyoutItem Text="Open" Clicked="OpenClicked" />
            <MenuFlyoutItem Text="Save" Clicked="SaveClicked" />
        </MenuBarItem>

    </ContentPage.MenuBarItems>
    <Grid>
        <VerticalStackLayout>

                    <Entry x:Name="SavePath"
                   Text=""
                   FontSize="12"    />
            <HorizontalStackLayout Margin="10">
                <Label x:Name="CellName" Text="Cell Name"  WidthRequest="100" VerticalOptions="CenterAndExpand">

                </Label>
                <Label x:Name="CellValue"  Text="Cell Value" WidthRequest="200" VerticalOptions="CenterAndExpand">

                </Label>
                <Entry x:Name="CellContent" Text="" WidthRequest="600">

                </Entry>

            </HorizontalStackLayout>
            
                    <SS:SpreadsheetGrid x:Name="spreadsheetGrid"/>
        </VerticalStackLayout>
        
    </Grid>
</ContentPage>

